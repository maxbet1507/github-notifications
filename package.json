{
    "name": "github-notifications",
    "displayName": "github-notifications",
    "description": "",
    "version": "0.0.1",
    "publisher": "maxbet1507",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "github-notification configuration",
            "properties": {
                "githubNotification.username": {
                    "type": "string",
                    "default": "",
                    "description": "Your GitHub username for API authentication."
                },
                "githubNotification.password": {
                    "type": "string",
                    "default": "",
                    "description": "Your GitHub password for API authentication."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "request-light": "^0.2.1"
    }
}